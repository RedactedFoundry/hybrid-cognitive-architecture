# Hybrid AI Council Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MAX_LOADED_MODELS=3
OLLAMA_NUM_PARALLEL=4

# =============================================================================
# DATABASE SERVICES
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

TIGERGRAPH_HOST=http://localhost
TIGERGRAPH_PORT=14240
TIGERGRAPH_USERNAME=tigergraph
TIGERGRAPH_PASSWORD=tigergraph

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
PUBLIC_URL=
API_BASE_URL=http://localhost:8001
ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_ENABLED=true
RATE_LIMITING_ENABLED=true
SECURITY_HEADERS_ENABLED=true
REQUEST_VALIDATION_ENABLED=true

# Rate Limiting Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# COGNITIVE SYSTEM CONFIGURATION
# =============================================================================
PHEROMIND_TTL=12

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_MAX_PROMPT_LENGTH=5000

# =============================================================================
# VOICE SERVICE CONFIGURATION
# =============================================================================
VOICE_SERVICE_HOST=localhost
VOICE_SERVICE_PORT=8011
